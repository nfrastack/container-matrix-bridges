source /container/base/functions/container/init
check_container_initialized

source /container/functions/00-container
SERVICE_NAME="bridge_signal"
source /container/defaults/matrix_bridges
source /container/defaults/bridge_signal

check_container_initialized
liftoff

print_start "Starting Signal bridge version ${SIGNAL_VERSION}"
sudo -u matrix /usr/bin/mautrix-signal \
                                        -c "${SIGNAL_CONFIG_PATH}"/"${SIGNAL_CONFIG_FILE}"